<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1>Change Flair</h1>

      <form action="/topics/<%= flair.topicId %>/posts/<%= flair.postId %>/flairs/<%= flair.id %>/update" method="post">
        <div class="form-group">
          <label for="name">Flair Name</label>
          <input value="<%= flair.name %>" type="text" class="form-control" name="name" aria-describedby="nameHelp" placeholder="Change Flair Name">
        </div>
        <div class="form-group">
          <label for="body">Flair Color</label>
          <input value="<%= flair.color %>" type="text" class="form-control" name="color" aria-describedby="colorHelp" placeholder="Change Flair Color">
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
